<%= form_with(model: [ post, post.comments.build ],
              local: true) do |form| %>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Create Comments", class:'btn btn-success'%>
  </div>

<% end %>