<div class="container">
  <nav class="navbar navbar-inverse">
    <div class="navbar-header">
      <%= link_to 'SharingWay', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path %></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <!--<li><%= link_to 'Profile', users_show_path()%></li>-->
          <li><%= link_to 'Edit Profile', edit_user_registration_path%></li>
          <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to 'Create Post', {controller: "posts", action: "new"} %></li>
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
        <div class="form-group">
          <!--<input type="text" class="form-control" placeholder="Search Friends">-->
          <%= form_tag(search_path, {:method => "get"}) do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Friends" %>
            <%= submit_tag "Search Friends" %>
          <% end %>
        </div>
        <!--<button type="submit" class="btn btn-default">Send Friend Request</button>-->
    </div>
  </nav>
  <div class="row">
    <div class="col-lg-3", style="background-color: #999999">
      <% if user_signed_in? %>
        <p>
          <strong>UserName:</strong>
          <%= @user.username %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>
      <% else %>
        <p>Please SignIn</p>
      <% end %>
    </div>
    <div class="col-lg-6", style="background-color: #DADADA">
      <% if user_signed_in? %>
        <h2>Posts</h2>
        <%@user.posts.each do |post|%>
         <%= render partial: 'partials/show_post', locals: {post: post} %>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-3", style="background-color: #999999">
      <% if user_signed_in? %>
        <% @users = User.all %>
        <% @users.each do |user| %>
          <%= user.username %><br/>
        <% end %>
      <% else %>
        <p>Please SignIn</p>
      <% end %>
    </div>
  </div>
</div>


